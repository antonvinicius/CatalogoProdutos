<MudMessageBox @ref="mbox" Title="@Title" CancelText="@TextoCancelar">
    <MessageContent>
        @ChildContent
    </MessageContent>
    <YesButton>
        <MudButton Variant="Variant.Filled" Color="@CorBotaoSubmit" StartIcon="@Icone">@TextoSubmit</MudButton>
    </YesButton>
</MudMessageBox>
@code {
    [Parameter]
    public EventCallback<bool?> Submit { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string TextoCancelar { get; set; }

    [Parameter]
    public string TextoSubmit { get; set; }

    [Parameter]
    public Color CorBotaoSubmit { get; set; }

    [Parameter]
    public string Icone { get; set; }

    [Parameter]
    public MudMessageBox mbox { get; set; }

    bool? result;


    public async Task Show()
    {
        bool? result = await mbox.Show();
        await Submit.InvokeAsync(result);
        mbox.Close();
        StateHasChanged();
    }
}
