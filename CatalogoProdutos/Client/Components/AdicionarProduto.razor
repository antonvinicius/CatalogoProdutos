<MudCard>
    <MudCardContent>
        <MudText>Adicionar Produto</MudText>
        <ProdutoForm Produto="Produto" />
    </MudCardContent>
    <MudCardActions>
        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Cadastrar</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [CascadingParameter]
    public Produto Produto { get; set; }
}