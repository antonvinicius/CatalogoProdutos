<MudCard>
    <MudCardContent>
        <MudText>Adicionar Categoria</MudText>
        <MudTextField Label="Nome"
                      @bind-Value="Categoria.Nome" For="@(() => Categoria.Nome)" />
    </MudCardContent>
    <MudCardActions>
        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Cadastrar</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [CascadingParameter]
    public Categoria Categoria { get; set; }
}